<Window x:Class="OlegShilo.MoveTypeToFile.TypeToMoveSelection"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select type(s) to move"
        MinHeight="200"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"
        PreviewKeyDown="Window_PreviewKeyDown"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="33"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="TypesList" ItemsSource="{Binding Items}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding Selected, Mode=OneWayToSource}" Content="{Binding DisplayName}" 
                                  MinWidth="150"></CheckBox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Grid.Row="1" Click="Button_Click" >OK</Button>

    </Grid>
</Window>
